{
  "name": "Yizhen 艺珍 - Chinese Ceramics Auction",
  "short_name": "Yizhen",
  "description": "Premium Chinese ceramics auction platform featuring Song, Yuan, and Ming Dynasty masterpieces with Web3 authentication",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#c9302c",
  "background_color": "#ffffff",
  "lang": "en",
  "dir": "ltr",
  "categories": [
    "art",
    "auction",
    "collectibles",
    "web3",
    "nft"
  ],
  "screenshots": [
    {
      "src": "/assets/images/screenshots/desktop-home.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide",
      "label": "Yizhen desktop homepage showing featured ceramic auctions"
    },
    {
      "src": "/assets/images/screenshots/mobile-auction.jpg",
      "sizes": "390x844",
      "type": "image/jpeg",
      "platform": "narrow",
      "label": "Mobile view of ceramic auction details"
    }
  ],
  "icons": [
    {
      "src": "/assets/images/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/images/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/images/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/images/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/images/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/images/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/assets/images/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/images/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Current Auctions",
      "short_name": "Auctions",
      "description": "View all current ceramic auctions",
      "url": "/#auctions",
      "icons": [
        {
          "src": "/assets/images/icons/shortcut-auctions.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Private Sales",
      "short_name": "Private",
      "description": "Browse private sales collection",
      "url": "/private",
      "icons": [
        {
          "src": "/assets/images/icons/shortcut-private.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Connect Wallet",
      "short_name": "Wallet",
      "description": "Connect your Web3 wallet",
      "url": "/?connect=wallet",
      "icons": [
        {
          "src": "/assets/images/icons/shortcut-wallet.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+yizhen",
      "url": "/auction?id=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://yizhen.com/manifest.json"
    }
  ]
}
